!***************************************************
! Buffered routines
!***************************************************

   flush_real_buffer
   ! Writes the real_buffer to disk, and positions the pointer at the start of
   ! the buffer.
     if (tonto_parallel.do_io) then
       write(unit=.unit,iostat=.io_status) .real_buffer
     end
     tonto_parallel.broadcast(.io_status,0)
     ENSURE(.io_status==0,"write error, error="// trim(.io_status.to_str))
     .record = .record + 1
     .real_buffer_pos = 1
   end

   flush_int_buffer
   ! Writes the int_buffer to disk, and positions the pointer at the start of
   ! the buffer.
     if (tonto_parallel.do_io) then
       write(unit=.unit,iostat=.io_status) .int_buffer
     end
     tonto_parallel.broadcast(.io_status,0)
     ENSURE(.io_status==0,"write error, error="// trim(.io_status.to_str))
     .record = .record + 1
     .int_buffer_pos = 1
   end

   flush_cpx_buffer
   ! Writes the cpx_buffer to disk, and positions the pointer at the start of
   ! the buffer.
     if (tonto_parallel.do_io) then
