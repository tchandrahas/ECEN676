   write_buffered_vec(the_vec)
   ! Writes the vector to the buffer, and writes buffer to disk when full.
     the_vec :: REALVEC, IN
     vec_length,vec_pos,buffer_top,vec_top,put_length :: INT
     vec_length = size(the_vec)
     vec_pos=1
     do
       put_length=min(FILE_BUFFER_LENGTH - .real_buffer_pos + 1,vec_length-vec_pos+1)
       buffer_top = .real_buffer_pos + put_length - 1
       vec_top = vec_pos + put_length - 1
       .real_buffer( .real_buffer_pos:buffer_top) = the_vec(vec_pos:vec_top)
       .real_buffer_pos = buffer_top + 1
       vec_pos = vec_top + 1
       if ( .real_buffer_pos > FILE_BUFFER_LENGTH) .flush_real_buffer
       if (vec_pos > vec_length) exit
     end
   end

   read_buffered_vec(the_vec)
   ! Reads the vector from the buffer, and reads buffer from disk when empty.
     the_vec :: REALVEC, OUT
     vec_length,vec_pos,buffer_top,vec_top,get_length :: INT
     vec_length = size(the_vec)
     vec_pos=1
     do
       if ( .real_buffer_pos > FILE_BUFFER_LENGTH) .get_real_buffer
       get_length=min(FILE_BUFFER_LENGTH - .real_buffer_pos + 1,vec_length-vec_pos+1)
       buffer_top = .real_buffer_pos + get_length - 1
       vec_top = vec_pos + get_length - 1
       the_vec(vec_pos:vec_top) = .real_buffer( .real_buffer_pos:buffer_top)
       .real_buffer_pos = buffer_top + 1
       vec_pos = vec_top + 1
       if (vec_pos > vec_length) exit
     end
   end

