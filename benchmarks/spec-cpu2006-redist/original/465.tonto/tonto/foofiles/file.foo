     if (tonto_parallel.do_io) then
       read(unit=.unit,iostat=.io_status) .int_buffer
     end
     tonto_parallel.broadcast(.io_status,0)
     tonto_parallel.broadcast(.int_buffer,0)
     ENSURE(.io_status==0,"read error, error="// trim(.io_status.to_str))
     .record = .record + 1
