   end

   write_buffered_real(the_real)
   ! Writes "the_real" to the buffer, and writes buffer to disk when full.
     the_real :: REAL, IN
     ENSURE( .real_buffer.created, "buffer not created")
     .real_buffer( .real_buffer_pos ) = the_real
     .real_buffer_pos = .real_buffer_pos + 1
     if ( .real_buffer_pos > FILE_BUFFER_LENGTH) .flush_real_buffer
   end

   read_buffered_real(the_real)
   ! Reads "the_real" from the buffer, and reads buffer from disk when empty.
     the_real :: REAL, OUT
     if ( .real_buffer_pos > FILE_BUFFER_LENGTH) .get_real_buffer
     the_real = .real_buffer( .real_buffer_pos )
     .real_buffer_pos = .real_buffer_pos + 1
   end

