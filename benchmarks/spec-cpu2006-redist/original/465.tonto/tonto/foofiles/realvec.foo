   equals(b,tol) result(res)
   ! Return true if "self" is the same as "b", within range "tol" if supplied
      self :: IN
      b :: SELF_TYPE, IN
      tol :: REAL, optional, IN
      res :: BIN
      res = .same_as(b,tol)
   end

   same_as(b,tol) result(res)
   ! Return true if "self" is the same as "b", within range "tol" if supplied
      self :: IN
      b :: SELF_TYPE, IN
      tol :: REAL, optional, IN
      res :: BIN
      tolerance :: REAL
      tmp :: SELF_TYPE(size(b))
      if (.dim/=b.dim) then
         res = FALSE
      else
         tolerance = REAL_EPSILON
         if (present(tol)) tolerance = tol
         tmp = self - b
         tmp = abs(tmp)
         if (any(tmp>tolerance)) then
            res = FALSE
         else
            res = dot_product(tmp,tmp)<tolerance*tolerance
         end
      end
   end

   are_all_equal(tol) result(res)
   ! Return TRUE if "self" contains qall the same elements, to within precision
   ! "tol", if supplied.
      self :: IN
      tol :: REAL, optional, IN
      res :: BIN
      i :: INT
      res = TRUE
      do i = 2,.dim
         if (self(1).equals(self(i),tol)) cycle
         res = FALSE
         exit
      end
   end

