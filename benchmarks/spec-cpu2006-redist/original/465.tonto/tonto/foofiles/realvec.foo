   is_zero(eps) result(res) ::: pure
   ! Return true if the vector is zero (within "eps", if supplied)
      self :: IN
      eps :: REAL, IN, optional
      res :: BIN
      val :: REAL
      val = .norm
      res = val.is_zero(eps)
   end

   all_in_range(range) result(res) ::: get_from(INTRINSICVEC), pure
   ! Return TRUE if all values of self are within the specified "range".
      self :: IN
      range :: SELF_TYPE(2), IN
      res :: BIN
      res = all(range(1) <= self AND self <= range(2))
   end

   in_range(range) result(res) ::: get_from(INTRINSICVEC), pure
   ! Return element i as TRUE if self(i) is within the specified "range".
      self :: IN
      range :: SELF_TYPE(2), IN
      res :: BINVEC(size(self))
      res = (range(1) <= self AND self <= range(2))
   end

   range result(res) ::: get_from(INTRINSICVEC), pure
   ! Return the range (smallest and largest value) of self.
      self :: IN
      res :: SELF_TYPE(2)
      res(1) = minval(self)
      res(2) = maxval(self)
   end

   is_z_axis(eps) result(res)
   ! Return true if the vector is set to the z-axis (within "eps", if supplied)
      eps :: REAL, optional
      res :: BIN
      ENSURE(.dim==3,"must supply a 3 dimensional vector!")
      res = self(1).is_zero(eps)
      res = self(2).is_zero(eps) AND res
      res = (ONE-self(3)).is_zero(eps) AND res
   end

