program run_FILE

   use TYPES
   use SYSTEM
   use STR
   use PARALLEL
   use FILE

   implicit none

   this :: FILE*
   junk,name :: STR
   m,m1 :: REALMAT(2,2)

   tonto_parallel.initialise
   tonto.initialize

   stdout.create_stdout
   stdout.flush
   stdout.text('Hello! Welcome to TONTO!')
   stdout.flush

   this.create("tmp_file")
   this.open(for="write")

   m(:,1) = (/2,85/)
   m(:,2) = (/34,17/)

   this.put(m)
   this.close
   this.destroy

   this.create("tmp_file")
   this.open(for="read")
   this.read(m1)

   stdout.flush
   stdout.text("This is the matrix before it was written to the file")
   stdout.put(m)
   stdout.text("This is the matrix after it was read from the file")
   stdout.put(m1)

   stdout.flush
   this.close_and_delete
   this.destroy

   tonto_parallel.finalise
end
